{
    "name": "Drive.io",
    "short_name": "Drive.io",
    "description": "High-utility, ephemeral storage PWA.",
    "start_url": "/",
    "id": "/",
    "display": "standalone",
    "background_color": "#0D0D0D",
    "theme_color": "#0D0D0D",
    "icons": [
        {
            "src": "/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "share_target": {
        "action": "/share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "file",
                    "accept": [
                        "image/*",
                        "video/*",
                        "audio/*",
                        "text/*",
                        "application/pdf",
                        "*/*"
                    ]
                }
            ]
        }
    }
}